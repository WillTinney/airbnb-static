<!-- Your banner code -->
<div id="banner" style="background-image: linear-gradient(-225deg, rgba(40,101,168,0.6) 0%, rgba(60,36,61,0.6) 50%), url('images/background2.jpg');">
  <div class="banner-content">
    <h1>WELCOME HOME</h1>
    <p>Rent unique places to stay from local hosts in 190+ countries.</p>
    <%= link_to "How it works", "#", class: "btn btn-primary btn-lg" %>
  </div>
</div>

<!-- Your features code -->
<div class="container padded text-center" id="features">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= image_tag "globe.png", alt: "" %>
      <h2>Discover the world</h2>
      <p>The earth is your new home.</p>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= image_tag "dollar.png", alt: "" %>
      <h2>Pay online</h2>
      <p>No cash issues anymore.</p>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= image_tag "beer.png", alt: "" %>
      <h2>Meet people</h2>
      <p>Discover new culture and lifestyle.</p>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= image_tag "heart.png", alt: "" %>
      <h2>Share and love</h2>
      <p>Join a community you love.</p>
    </div>
  </div>
</div>

<!-- Your cards code -->
<div class="wrapper-grey padded">
  <div class="container">
    <h2 class="text-center">Your next trip</h2>
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path "card-paris.jpg" %>');">
          <%= image_tag "seb.jpg", alt: "seb", class: "card-user avatar" %>
          <div class="card-category">Paris</div>
          <div class="card-description">
            <h2>Seb's home</h2>
            <p>Charming room with lovely patio</p>
          </div>
          <%= link_to "", "#", class: "card-link" %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path "card-brussels.jpeg" %>');">
          <%= image_tag "anne.jpg", alt: "anne", class: "card-user avatar" %>
          <div class="card-category">Brussels</div>
          <div class="card-description">
            <h2>Anne's home</h2>
            <p>Lovely house</p>
          </div>
          <%= link_to "", "#", class: "card-link" %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path "card-london.jpeg" %>');">
          <%= image_tag "romain.jpeg", alt: "romain", class: "card-user avatar" %>
          <div class="card-category">London</div>
          <div class="card-description">
            <h2>Romain's home</h2>
            <p>Nice flat in Picadilly</p>
          </div>
          <%= link_to "", "#", class: "card-link" %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Your newsletter code -->
<div class="container text-center padded" id="newsletter">
  <h2>Get news from us</h2>
  <p>Leave us your mail and get news from us</p>
  <form action="/" class="form-inline">
    <input type="email" placeholder="bob@gmail.com">
    <input type="submit" value="Subscribe" class="btn btn-primary">
  </form>
</div>

